.t-cell {
  margin: 15px 0;
  overflow: hidden;
  position: relative;
}

.t-cell_disabled {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.6);
}

.t-cell_title {
  padding: 0 15px;
  margin-bottom: 10px;
  color: #666666;
}

.t-cell_content {
  overflow: hidden;
  position: relative;
  background-color: #fff;
  padding: 10px 15px;
  display: flex;
  align-items: center;
}

.t-cell_content:first-child:before {
  display: none;
}

.t-cell_content:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #f5f5f5;
  color: #c8c8cd;
  left: 15px;
  right: 15px;
}

.t-cell_name {
  flex: 1;
}

.t_cell_more {
  text-align: right;
}
